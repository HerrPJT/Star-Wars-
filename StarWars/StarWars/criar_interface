function fig = criar_interface(tagName,nome)
    if nargin < 1
        tagName = 'areaTexto';  % Default
    end
    fig = uifigure(Name=nome, Position=[100 100 500 600]);
    uitextarea(fig, ...
        'Position', [20 20 460 550], ...
        'Editable', 'off', ...
        'FontName', 'Courier New', ...
        'FontSize', 12, ...
        'Tag', tagName);
end